{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "E:\\Programs\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // "*.C"    编译当前文件夹中所有的.c源文件
                "-o",
                // "${fileDirname}\\${fileBasenameNoExtension}.exe"
                "${fileDirname}\\test.exe"//使当前文件夹中所有的.C源文件统一生成一个名为test的可执行程序。
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}